<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="DirectShowLib.Standard" Version="2.1.0" />
  </ItemGroup>
  <!-- Exclude deprecated AdvancedWindow from build -->
  <ItemGroup>
    <Compile Remove="AdvancedWindow.xaml.cs" />
    <Page Remove="AdvancedWindow.xaml" />
    <None Remove="AdvancedWindow.xaml" />
  </ItemGroup>
</Project>
